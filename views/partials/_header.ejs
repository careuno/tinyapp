<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) {%>
    <div class="d-flex align-items-center">
      <span class="nav-item nav-link">
        Logged In As: <%= user.email %>
      </span>
      <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
      <!-- <a href="/logout"></a> -->
      <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">
          Logout
        </button>
    </div>
    </form>
    <%} else {%>
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/login">Login</a>
        <a class="nav-item nav-link" href="/register">Register</a>
      </div>
    <!-- <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
          <input class="form-control mr-sm-2" type="text" name= "username" placeholder="Username" aria-label="Username">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Login</button>
        </form> -->
    <%} %>

    <!-- 

    <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
      <input class="form-control mr-sm-2" type="text" name= "username" placeholder="Username" aria-label="Username">
      <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Login</button>
    </form> -->
  </nav>
</header>

<!--- ACTION refers to where we submit the post method/client input to when button is clicked, METHOD tells form which HTTP method to use when submitting, input tag has NAME attribute, identifies the data we are sending -->
